{
  "kind": "collectionType",
  "collectionName": "episodes",
  "info": {
    "name": "episode"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "time": {
      "type": "time",
      "required": true
    },
    "episode_cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "description": {
      "type": "richtext"
    },
    "author": {
      "via": "episodes",
      "model": "author"
    }
  }
}
