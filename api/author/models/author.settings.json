{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "name": "author"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "occupation": {
      "type": "string"
    },
    "picture": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "role": {
      "type": "string"
    },
    "episodes": {
      "via": "author",
      "collection": "episode"
    }
  }
}
